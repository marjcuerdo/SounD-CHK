<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            tools:context="com.soundchkapp.soundchk.StoryPageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="10"
            android:orientation="vertical"
            android:background="@color/colorBlack"
            android:paddingBottom="0dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:maxHeight="550dp"
                android:minHeight="550dp"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="50sp"
                android:textStyle="bold"
                android:shadowColor="@color/colorBlack"
                android:shadowRadius="1.5"
                android:shadowDx="8"
                android:shadowDy="8"
                android:id="@+id/textView"/>

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:minHeight="50dp"
                android:maxHeight="50dp"
                android:layout_weight="3"
                android:src="@drawable/down_arrow"
                android:scaleType="fitCenter"
                android:background="@color/colorBlack"
                android:id="@+id/button7"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lockedtext"
            android:gravity="center"
            android:padding="10sp"
            android:text="LOCKED CONTENT"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/locked_holder"
            android:weightSum="3"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/locked"
                android:id="@+id/imglocked1"/>
            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/locked"
                android:id="@+id/imglocked2"/>
            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/locked"
                android:id="@+id/imglocked3"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/story_free"
            android:background="@color/colorGreen"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:paddingTop="25dp"
            android:paddingRight="25dp"
            android:paddingLeft="25dp"
            android:paddingBottom="0dp"
            android:text="@string/short_text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/story_locked"
            android:background="@color/colorGreen"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:paddingTop="0dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:visibility="gone"
            android:text="@string/large_text"/>
    </LinearLayout>
</ScrollView>

