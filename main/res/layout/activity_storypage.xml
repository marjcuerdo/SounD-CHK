<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/scroll_view"
            android:scrollbarThumbVertical="@drawable/scrollbar_feed"
            tools:context="com.soundchkapp.soundchk.StoryPageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="10"
            android:orientation="vertical"
            android:background="@color/colorBlack"
            android:paddingBottom="0dp"
            >

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8.75"
                android:gravity="bottom|left"
                android:maxHeight="600dp"
                android:minHeight="600dp"
                android:shadowColor="@color/colorBlack"
                android:shadowDx="8"
                android:shadowDy="8"
                android:shadowRadius="1.5"
                android:textColor="@color/colorWhite"
                android:textSize="40sp"
                android:textStyle="bold"/>

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.25"
                android:src="@drawable/black_down_arrow"
                android:scaleType="fitCenter"
                android:background="@color/colorWhiteBg"
                android:id="@+id/button_scroll_down"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lockedtext"
            android:gravity="center"
            android:padding="10sp"
            android:text="LOCKED CONTENT"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:background="@color/colorGrey"
            android:orientation="horizontal">



        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/locked_holder"
                android:orientation="horizontal"
                android:background="@color/colorGrey">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:src="@drawable/locked"
                    android:background="@color/color_home_dark"
                    android:layout_margin="5dp"
                    android:id="@+id/imglocked1"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:src="@drawable/locked"
                    android:background="@color/color_home_dark"
                    android:layout_margin="5dp"
                    android:id="@+id/imglocked2"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:src="@drawable/locked"
                    android:background="@color/color_home_dark"
                    android:layout_margin="5dp"
                    android:id="@+id/imglocked3"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:background="@color/color_home_dark"
                    android:layout_margin="5dp"
                    android:src="@drawable/locked"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:background="@color/color_home_dark"
                    android:layout_margin="5dp"
                    android:src="@drawable/locked"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:background="@color/color_home_dark"
                    android:layout_margin="5dp"
                    android:src="@drawable/locked"/>
            </LinearLayout>
        </HorizontalScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="7"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/colorGrey">

            <!--<com.google.android.youtube.player.YouTubePlayerView
                android:id="@+id/youtube_view"
                android:layout_width="275dp"
                android:layout_height="250dp"/>-->

            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/button_change_vid_prev"
                android:layout_gravity="center"
                android:src="@drawable/black_left_arrow"
                android:background="@color/colorWhiteBg"
                android:layout_height="match_parent"/>

            <com.google.android.youtube.player.YouTubePlayerView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="250dp"
                android:id="@+id/youtube_view" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/button_change_vid_next"
                android:layout_gravity="center"
                android:src="@drawable/black_right_arrow"
                android:background="@color/colorWhiteBg"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/story_free"
            android:background="@color/colorBlack"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:paddingTop="25dp"
            android:paddingRight="25dp"
            android:paddingLeft="25dp"
            android:paddingBottom="0dp"
            android:text="@string/short_text"/>

        <Button
            android:id="@+id/scan_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="@string/read_more"
            android:padding="25dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/color_home_dark"
            android:textColor="@color/colorWhite"
            android:gravity="center"/>
            <!--android:text="@string/short_text"-->


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/story_locked"
            android:background="@color/colorBlack"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:paddingTop="0dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:visibility="gone"
            android:text="@string/large_text"/>
    </LinearLayout>
</ScrollView>

