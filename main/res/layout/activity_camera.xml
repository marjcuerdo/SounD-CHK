<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:background="@color/colorBlack"
                tools:context="com.soundchkapp.soundchk.CameraActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_qr_code_example"
        android:scaleType="fitXY"
        android:background="@color/colorWhite"
        android:src="@drawable/qr_introvid"
        android:layout_alignParentRight="true"
        android:alpha="0.875"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_qr_code_example"
        android:text="What?"
        android:textSize="12sp"
        android:textColor="@color/colorWhite"
        android:layout_alignParentRight="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_scan_qr_code"
        android:textColor="@color/colorBlack"
        android:textAllCaps="true"
        android:paddingBottom="50dp"
        android:paddingTop="50dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:background="@drawable/roundedbutton"
        android:textSize="35sp"
        android:textStyle="bold"
        android:id="@+id/scan_btn"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:shadowRadius="1"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowColor="@color/colorGrey"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scan_instructions"
        android:layout_above="@id/scan_btn"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorWhite"
        android:text="Tap to scan a QR code."
        android:visibility="visible"/>
       <!-- android:text="Tap ABOVE to scan a QR Code.\nTap BELOW to watch our idea video pitch."/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scan_instructions"
        android:id="@+id/button_qr_code_example"
        android:scaleType="fitCenter"
        android:background="@color/colorWhite"
        android:src="@drawable/qr_introvid"
        android:layout_centerHorizontal="true"
        android:alpha="0.875"/>
-->
</RelativeLayout>

